{
	"name": "jaroslaw-kucharski",
	"version": "1.0.0",
	"description": "gid-coders-recruitment-task",
	"main": "index.js",
	"scripts": {
		"start": "cross-env NODE_PATH=src/ webpack serve",
		"prebuild": "rimraf build",
		"build": "npm run prebuild && cross-env NODE_PATH=src/ webpack",
		"test": "cross-env NODE_PATH=src/ jest",
		"test:coverage": "npm test -- --coverage",
		"test:badges": "npm run test:coverage && jest-coverage-badges",
		"jsdoc": "jsdoc -c jsdoc.json"
	},
	"author": "Jaros≈Çaw Kucharski",
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@babel/node": "^7.14.7",
		"@babel/plugin-proposal-class-properties": "^7.14.5",
		"@babel/preset-env": "^7.14.7",
		"@babel/preset-react": "^7.14.5",
		"axios": "^0.21.4",
		"babel-jest": "^27.0.6",
		"babel-loader": "^8.2.2",
		"better-docs": "^2.3.2",
		"cross-env": "^7.0.3",
		"css-loader": "^6.0.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.6",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.1",
		"eslint-plugin-react": "^7.24.0",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.3.2",
		"image-webpack-loader": "^7.0.1",
		"jest": "^27.0.6",
		"node-sass": "^6.0.1",
		"path": "^0.12.7",
		"prettier": "^2.3.2",
		"prop-types": "^15.7.2",
		"react-icons": "^4.2.0",
		"react-uuid": "^1.0.2",
		"sass-loader": "^12.1.0",
		"style-loader": "^3.1.0",
		"webpack": "^5.51.1",
		"webpack-cli": "^4.8.0",
		"webpack-dev-server": "^3.11.2"
	},
	"dependencies": {
		"jest-coverage-badges": "^1.1.2",
		"jsdoc": "^3.6.7",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^5.3.0"
	},
	"jest": {
		"setupFiles": [
			"./setupTests.js"
		],
		"moduleNameMapper": {
			"^.+\\.(css|scss|png|jpg)$": "babel-jest"
		},
		"coverageReporters": [
			"json-summary",
			"text",
			"lcov"
		],
		"collectCoverageFrom": [
			"src/components/**/*.{js,jsx}",
			"!**/node_modules/**"
		],
		"moduleDirectories": [
			"node_modules",
			"src"
		]
	}
}
